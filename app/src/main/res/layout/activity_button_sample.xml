<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.ddns.dai.samplecodeprograms.ButtonSampleActivity">

    <!-- いちいちtoolbarのxml書くのがだるいのでincludeさせてる -->
    <include layout="@layout/toolbar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Buttonの実装について" />
        </LinearLayout>

        <!-- フローティングアクションボタン(fab)の実装方法は2つ
            ・ このように任意のrootタグで囲っているものはコンテンツ部分をFrameLayoutで囲う(そうしないとfabが表示されない)
            ・toolbar解説のところのように、rootタグをCoordinatorLayoutで利用している場合はFrameLayoutなしでできる
             利点としてスクロールしたときにヘッダーを隠すアニメーションなどを取り入れられる
         -->

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@android:drawable/btn_star" />

    </FrameLayout>

</LinearLayout>
